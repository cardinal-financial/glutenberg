{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/essential",
        "plugin:react/recommended",
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "prettier",
        "react"
    ],
    "rules": {
        // suppress errors for missing 'import React' in files
        "react/react-in-jsx-scope": "off",
        "react/prop-types": "off",
        "eqeqeq": [
            "error",
            "always"
        ],
        "yoda": [
            "error",
            "never"
        ],
        "no-unused-vars": "warn",
        "no-console": "off",
        "func-names": "off",
        "no-plusplus": "off",
        "no-process-exit": "off",
        "no-new": "off",
        "no-param-reassign": ["error", { "props": false }],
        "object-shorthand": "off",
        "class-methods-use-this": "off",
        "no-use-before-define": ["error", { "functions": false }],
        "no-alert": "off"
    }
}
